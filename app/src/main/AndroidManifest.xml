<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.bumjinkim.GPA4U">

    <application
        android:name=".KimApplication"
        android:allowBackup="false"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".KimSettingsActivity"
            android:label="@string/title_activity_kim_settings"
            android:parentActivityName=".KimMainActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.bumjinkim.GPA4U.KimMainActivity" />
        </activity>
        <activity
            android:name=".KimAddAssessmentActivity"
            android:label="@string/title_activity_kim_add_assessment"
            android:theme="@style/AppTheme" />
        <activity
            android:name=".KimAddCourseActivity"
            android:label="@string/title_activity_kim_add_course"
            android:theme="@style/AppTheme" />
        <activity
            android:name=".KimMyAssessmentsActivity"
            android:label="@string/title_activity_kim_my_assessments" />
        <activity
            android:name=".KimMainActivity"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>